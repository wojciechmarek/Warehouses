<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehousesFrontend.Views.Common"
        xmlns:ViewModels="clr-namespace:WarehousesFrontend.ViewModels" x:Class="WarehousesFrontend.Views.Common.LoginWindow"
        mc:Ignorable="d"
        Height="300" Width="400" MaxHeight="300" MaxWidth="400"
        ResizeMode="NoResize" WindowStyle="ToolWindow"
        Title="Logowanie"
        Background="#aeaeae"
        WindowStartupLocation="CenterScreen">




    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Login:"/>
        <TextBox Text="{Binding LoginInput}" Height="30" Width="200" Margin="0" TextAlignment="Center" FontSize="20"/>

        <Label Content="Password:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding PasswordInput}"  Height="30" Width="200" Margin="0,2" TextAlignment="Center" FontSize="20"/>
        
        <Button Command="{Binding LoginButton}" Height="50" Width="200" Background="LightGreen" Content="Zaloguj" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
